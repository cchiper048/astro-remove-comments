---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Meta UTF -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Set page title -->
    <title>{title}</title>

    <style>
      /* Style comment 1 */
      /* Head style comment */
    </style>
  </head>
  <body>
    <slot />

    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }

      /* Body style comment */
    </style>
  </body>
</html>

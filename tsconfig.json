{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noUncheckedSideEffectImports": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["coverage", "node_modules", "dist", "test"]
}
